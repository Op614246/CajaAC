<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rounded"
    android:orientation="vertical">

    <!-- Contenedor con padding para título, header y items -->
    <!-- Header con icono y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                app:tint="@color/info" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/info"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingHorizontal="10dp">
        <!-- Header de la tabla -->
        <LinearLayout
            android:id="@+id/tableHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/border_bottom"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvHeaderCol1"
                style="@style/bold_65"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Moneda o tarjeta" />

            <TextView
                android:id="@+id/tvHeaderCol2"
                style="@style/bold_65"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Retención" />

            <TextView
                android:id="@+id/tvHeaderCol3"
                style="@style/bold_65"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Monto" />

            <TextView
                android:id="@+id/tvHeaderCol4"
                style="@style/bold_65"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Contenedor de items -->
        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>


    <!-- Sección de Total (oculto por defecto, se muestra al expandir) - cubre todo el ancho -->
    <LinearLayout
        android:id="@+id/totalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/info_5"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTotalLabel"
            style="@style/bold_65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TOTAL INGRESOS EFECTIVO/TARJETAS POR VENTAS" />

        <TextView
            android:id="@+id/tvTotalAmount"
            style="@style/bold_65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="" />

    </LinearLayout>

    <!-- Botón Mostrar más/menos - cubre todo el ancho -->
    <LinearLayout
        android:id="@+id/expandButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvExpandText"
            style="@style/fontListas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar más"
            android:textColor="@color/info" />

        <ImageView
            android:id="@+id/ivExpandArrow"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_svg_chevron_down"
            app:tint="@color/info" />
    </LinearLayout>

</LinearLayout>
