<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rounded"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header con icono y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/info" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/info"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Header de la tabla -->
    <LinearLayout
        android:id="@+id/tableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_middle_night"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvHeaderCol1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Moneda o tarjeta"
            android:textColor="@color/text_85"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHeaderCol2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="end"
            android:text="Retención"
            android:textColor="@color/text_85"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHeaderCol3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="end"
            android:text="Monto"
            android:textColor="@color/text_85"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHeaderCol4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="end"
            android:visibility="gone"
            android:textColor="@color/text_85"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Contenedor de items (se expande/contrae) -->
    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Sección de Total -->
    <LinearLayout
        android:id="@+id/totalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/info_5"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat_bold"
            android:text="TOTAL INGRESOS EFECTIVO/TARJETAS POR VENTAS"
            android:textColor="@color/text_85"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="end"
            android:text="S/9,027.60"
            android:textColor="@color/info"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Botón Mostrar más/menos -->
    <LinearLayout
        android:id="@+id/expandButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tvExpandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Mostrar más"
            android:textColor="@color/info"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivExpandArrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/icon_svg_chevron_down"
            app:tint="@color/info" />
    </LinearLayout>

</LinearLayout>
