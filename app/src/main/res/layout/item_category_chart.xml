<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="24dp">

    <ImageView
        android:id="@+id/colorIndicator"
        android:layout_width="9dp"
        android:layout_height="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_svg_green_circle" />

    <TextView
        android:id="@+id/tvCategoryLabel"
        style="@style/regular_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bebidas con alcohol"
        android:maxLines="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="................................................................................................................................................................"
        android:textColor="@color/text_85"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="2dp" />

    <TextView
        android:id="@+id/tvCategoryValue"
        style="@style/fontListasMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/989.09" />

</LinearLayout>
