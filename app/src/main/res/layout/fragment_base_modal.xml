<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modal_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="32dp"
    tools:background="@color/text_10">

    <View
        android:id="@+id/modal_container_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_modal"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/modal_title_icon"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/modal_container_bg"
        app:layout_constraintTop_toTopOf="@id/modal_container_bg"
        tools:src="@drawable/icon_svg_cash_register" />

    <ImageView
        android:id="@+id/btn_close_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingStart="24dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_svg_xmark"
        app:layout_constraintBottom_toBottomOf="@id/modal_title"
        app:layout_constraintEnd_toEndOf="@id/modal_container_bg"
        app:layout_constraintTop_toTopOf="@id/modal_title" />

    <TextView
        android:id="@+id/modal_title"
        style="@style/MiApp.Titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/modal_title_icon"
        app:layout_constraintEnd_toStartOf="@id/btn_close_modal"
        app:layout_constraintStart_toEndOf="@id/modal_title_icon"
        app:layout_constraintTop_toTopOf="@id/modal_title_icon"
        tools:text="TÃ­tulo del Modal" />

    <View
        android:id="@+id/header_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintEnd_toEndOf="@id/modal_container_bg"
        app:layout_constraintStart_toStartOf="@id/modal_container_bg"
        app:layout_constraintTop_toBottomOf="@id/modal_title" />

    <FrameLayout
        android:id="@+id/modal_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/footer_divider"
        app:layout_constraintEnd_toEndOf="@id/modal_container_bg"
        app:layout_constraintStart_toStartOf="@id/modal_container_bg"
        app:layout_constraintTop_toBottomOf="@id/header_divider" />

    <View
        android:id="@+id/footer_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/border_top"
        app:layout_constraintBottom_toTopOf="@id/modal_buttons_container"
        app:layout_constraintEnd_toEndOf="@id/modal_container_bg"
        app:layout_constraintStart_toStartOf="@id/modal_container_bg" />

    <LinearLayout
        android:id="@+id/modal_buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/modal_container_bg"
        app:layout_constraintEnd_toEndOf="@id/modal_container_bg"
        app:layout_constraintStart_toStartOf="@id/modal_container_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>