<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:paddingHorizontal="10dp"
    android:paddingBottom="8dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tv_badge_p"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/badge_producto"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:text="P"
        android:textColor="@color/text_85"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_producto_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="Coca Cola 135 ml"
        android:textColor="@color/text_85"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_badge_p"
        app:layout_constraintEnd_toStartOf="@+id/container_pres" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_pres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded_10"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_producto_nombre"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_categoria">

        <TextView
            android:id="@+id/tv_pres_text"
            style="@style/regular_85"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="UNIDAD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_chevron"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/img_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_svg_chevron_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/text_85" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_item_categoria"
        style="@style/regular_85"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bebidas"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/container_pres"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_precio" />

    <TextView
        android:id="@+id/tv_item_precio"
        style="@style/regular_85"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S/ 0.00"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_categoria"
        app:layout_constraintEnd_toStartOf="@+id/et_item_cantidad" />

    <EditText
        android:id="@+id/et_item_cantidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_search"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:hint="0"
        android:inputType="number"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textColor="@color/text_85"
        android:textColorHint="@color/text_25"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_precio"
        app:layout_constraintEnd_toStartOf="@+id/img_dots" />

    <ImageView
        android:id="@+id/img_dots"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_svg_tres_puntitos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>