<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CajaAC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MiApp.Titulo" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/text_85</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="fontListas" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_list_size</item>
        <item name="android:textColor">@color/text_85</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="fontListasMedium" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_list_size</item>
        <item name="android:textColor">@color/text_85</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="titleCards" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:textColor">@color/info</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="bold_65" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_list_size</item>
        <item name="android:textColor">@color/text_65</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="regular_85" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_list_size_medium</item>
        <item name="android:textColor">@color/text_85</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>